{
  "variables": {
    "defaultTenantId": "d7d09513-a3f5-401c-9685-34ab6c552453",
    "adminEmail": "admin@example.com",
    "adminPassword": "password",
    "joomlaAppId": "#{UUID()}",
    "adminUserId": "00000000-0000-0000-0000-000000000001"
  },
  "apiKeys": [
    {
      "key": "bf69486b-4733-4470-a592-f1bfce7af580",
      "description": "Standard development API key"
    }
  ],
  "requests": [
    {
      "method": "POST",
      "url": "/api/application/#{joomlaAppId}",
      "tenantId": "#{defaultTenantId}",
      "body": {
        "application": {
          "name": "Joomla",
	  "authorizedOriginURLs": ["https://www.yoursite.com"],
	  "authorizedRedirectURLs": ["https://www.yoursite.com"],
	  "enabledGrants": ["authorization_code"]
        }
      }
    },
    {
      "method": "POST",
      "url": "/api/user/registration/#{adminUserId}",
      "body": {
        "user": {
          "birthDate": "1981-06-04",
          "email": "#{adminEmail}",
          "firstName": "Admin",
          "lastName": "User",
          "password": "#{adminPassword}"
        },
        "registration": {
          "applicationId": "#{FUSIONAUTH_APPLICATION_ID}",
          "roles": [
            "admin"
          ]
        }
      }
    },
    {
      "method": "POST",
      "url": "/api/user/registration/#{adminUserId}",
      "body": {
        "registration": {
          "applicationId": "#{joomlaAppId}"
        }
      }
    }
  ]
}

